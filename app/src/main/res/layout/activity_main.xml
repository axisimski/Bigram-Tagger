<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="axisimski.bigramtagger.MainActivity">

    <EditText
        android:id="@+id/ngramInput"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:hint="Corpus"
        android:layout_above="@+id/insertCorpus"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:inputType="textUri|textPersonName" />

    <Button
        android:id="@+id/insertCorpus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="insert Corpus" />

    <Button
        android:id="@+id/calculateProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Bigram Probabilities" />

    <EditText
        android:id="@+id/corpusInput"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:hint="Ngram"
        android:layout_alignBottom="@+id/insertCorpus"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:inputType="textUri|textPersonName" />

    <TextView
        android:id="@+id/output"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    </RelativeLayout>
