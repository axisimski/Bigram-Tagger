<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="axisimski.bigramtagger.MainActivity">

    <Button
        android:id="@+id/toLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:text="Convert to Latin" />

    <Button
        android:id="@+id/toCyrillic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/toLatin"
        android:layout_below="@+id/toLatin"
        android:layout_marginTop="27dp"
        android:text="Convert to Cyrillic" />

    <EditText
        android:id="@+id/text_edt"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toCyrillic"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Enter text here"
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_edt"
        android:layout_below="@+id/text_edt"
        android:layout_marginTop="41dp"
        android:text="Settings " />


</RelativeLayout>
