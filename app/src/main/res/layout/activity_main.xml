<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="axisimski.bigramtagger.MainActivity">

    <Button
        android:id="@+id/toLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/corpusInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Convert to Latin" />

    <Button
        android:id="@+id/toCyrillic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toLatin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Convert to Cyrillic" />

    <EditText
        android:id="@+id/text_edt"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toCyrillic"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter text here"
        android:inputType="textMultiLine"
        android:textAlignment="center" />



    </RelativeLayout>
