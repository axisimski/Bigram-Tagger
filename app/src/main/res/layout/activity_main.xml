<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="axisimski.bigramtagger.MainActivity">

    <Button
        android:id="@+id/insertCorpus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="insert Corpus" />

    <Button
        android:id="@+id/calculateProb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="parseCorpus" />

    <EditText
        android:id="@+id/corpusInput"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_above="@+id/insertCorpus"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Enter text here"
        android:inputType="textUri|textPersonName" />



    </RelativeLayout>
